                    </div>


                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 required" for="cv_cargosPretendidos">Cargos
                            pretendidos</label>
                        <div class="col-sm-10">
                            {% for cargo in cv.cargosPretendidos %}
                                <input type="text" disabled="disabled"
                                       class="form-control" readonly="readonly"
                                       value="{{ cargo.cargo }}"/><br/>
                            {% endfor %}
