{% extends 'cvForm/index.html.twig' %}

{% block up_scripts %}
    <script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}

{% block page_content %}


    <section class="login-block">
        <div class="container" style="min-width: 350px; max-width: 400px;">
            <div class="row">
                <div class="col-12 login-sec">
                    <p class="text-center"><img src="https://www.casabonsucesso.com.br/img/LOGO_COMPLETO_200px.jpg"/>
                    </p>
                    <h2 class="text-center">Cadastro de Currículos</h2>

                    <div id="fixedFlashes"></div>

                    <form class="login-form" action="/cvForm/novo" method="post">

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('novo') }}"/>

                        <div class="form-group">
                            <label for="cpf">CPF</label>
                            <input type="text" class="form-control cpf" name="cpf" id="cpf"
                                   value="{{ cpf|default('') }}" readonly/>
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="email" class="form-control email" name="email" id="email" required/>
                        </div>
                        <div class="form-group">
                            <label for="password">Senha</label>
                            <input type="password" class="form-control" name="password" id="password" required/>
                        </div>
                        <div class="form-group">
                            <label for="password2">Repita a Senha</label>
                            <input type="password" class="form-control" name="password2" id="password2"
                                   required/>
                        </div>
                        <div class="alert alert-warning alert-dismissible fade collapse hide" id="alertSenhas"
                             role="alert">
                            <strong>Atenção!</strong> As senhas não coincidem.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="form-check">
                            <button type="submit" name="btnNovo" id="btnNovo" class="btn btn-login float-right"
                                    value="Novo">
                                Enviar
                            </button>
                        </div>


                    </form>

                </div>

            </div>
    </section>

{% endblock %}

{% block down_scripts %}
    {{ encore_entry_script_tags('cvForm/novo') }}
{% endblock %}