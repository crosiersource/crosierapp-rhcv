{% extends 'cvForm/index.html.twig' %}

{% block up_scripts %}
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <link rel="stylesheet" href="{{ asset('build/static/cvForm/cvForm.css') }}">
{% endblock %}

{% block page_content %}

    <section class="login-block">
        <div class="container">
            <div class="row">
                <div class="col-md-12 login-sec">
                    <p class="text-center"><img src="http://www.casabonsucesso.com.br/img/LOGO_COMPLETO_200px.jpg"/>
                    </p>
                    <h2 class="text-center">Cadastro de Currículo</h2>


                    <form action="{{ url('cvForm_alterarSenha') }}" method="post">

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('alterarSenha') }}"/>

                        <div class="form-group">
                            <label for="password_login">Senha Atual</label>
                            <input type="password" class="form-control" name="password_login" id="password_login"
                                   required/>
                        </div>

                        <div class="form-group">
                            <label for="password">Nova Senha</label>
                            <input type="password" class="form-control" name="password" id="password" required/>
                        </div>
                        <div class="form-group">
                            <label for="password2">Repita a Senha</label>
                            <input type="password" class="form-control" name="password2" id="password2"
                                   required/>
                        </div>
                        <div class="alert alert-warning alert-dismissible fade collapse hide" id="alertSenhas"
                             role="alert">
                            <strong>Atenção!</strong> As senhas não coincidem.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="row">
                            <div class="col text-right">
                                <button type="submit" name="btnAlterarSenha" class="btn btn-primary" value="Salvar">
                                    <i class="fas fa-unlock-alt"></i> Alterar a senha
                                </button>
                            </div>
                        </div>

                    </form>


                </div>

            </div>
    </section>

{% endblock %}

{% block down_scripts %}
    <script src="{{ asset('build/cvForm/novo.js') }}"></script>
{% endblock %}